<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/pressed_layout">
        <ImageView
            android:id="@+id/order_dish_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pizza"
            android:contentDescription="Dish picture" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/order_dish_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"
                android:textColor="#262626" />
            <TextView
                android:id="@+id/order_dish_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description : Lorem ipsum dolor sit amet, qwed"
                android:textSize="15sp"
                android:textColor="#262626" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/order_interactionlayout_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Changing layout"
            android:textSize="15sp"
            android:textColor="#262626" />
    </LinearLayout>
</LinearLayout>